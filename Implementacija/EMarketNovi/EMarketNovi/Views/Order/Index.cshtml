                    <li class="list-group-item"><span>Proizvod3</span></li>
                </ul>
            </div>
            <div class="form-group row" style="height: 40;">
                <div class="col-sm-2 text-left"><a href="#">Odustani</a></div>
                @Html.ActionLink("Kreiraj narudzbu", "OrderDetails", "Order", null, new { @class = "btn btn-primary btn-danger", style = "position: relative;background-color: #3DD713;left: 1100px; color: #3DD713; border-top-left-radius: 5px; border-bottom-left-radius: 5px;", type = "submit" })
            </div>
        </form>
    </div>
