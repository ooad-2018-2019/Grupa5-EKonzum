
@{
    ViewData["Title"] = "Kreiranje narudzbe";
}

<div class="row border border-primary" style="background-color: lightgray;width: 300;">
    <div class="col">
        <form>
            <div class="row">
                <h4 class="col-sm-8" style="  background-color: gray;
">
                    Korisnicko Ime
                </h4>

                <h5 class="col-sm-2" style="  background-color: lightslategrey;
">
                    @Html.ActionLink("Pogledaj svoj racun", "CorrectAnswer", "User", null, new { })

                </h5>
                <h5 class="col-sm-2" style="  background-color: lightslategray;
">
                    @Html.ActionLink("Odjavi se", "Index", "Home", null, new { })

                </h5>


            </div>
            <div class="col-sm-4 text-left">
