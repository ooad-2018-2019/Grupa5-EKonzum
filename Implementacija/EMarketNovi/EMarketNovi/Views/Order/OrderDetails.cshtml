
@{
    ViewData["Title"] = "Detalji narudzbe";
}

<div class="row border border-primary" style="background-color: lightgray;width: 300;">
    <div class="col" style="height: 280;">
        <form>
            <div style="height: 36;"><input class="form-control col-sm-4" type="text" id="outputUsername" readonly="true" /></div>
            <div class="form-group row" style="height: 40;"><label class="col-sm-3 col-form-label" for="inputAdress">Adresa dostave:</label><input class="form-control col-sm-8" type="text" id="inputAdress" /></div>
            <div class="form-group row" style="height: 40;"><label class="col-sm-3 col-form-label" for="outputPrice">Ukupna cijena:</label><input class="form-control col-sm-8" type="text" id="outputPrice" readonly="true" /></div>
            @Html.ActionLink("Iskoristi bodove", "NedovoljnoBodova", "Order", null, new { })
            <div class="form-group row" style="height: 40;">
                <label class="col-sm-3 col-form-label">Način plaćanja:</label>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="checkOne" /><label class="form-check-label" for="checkOne">Gotovina   </label></div>
                <div class="form-check"><input class="form-check-input" type="checkbox" id="checkOne" /><label class="form-check-label text-center" for="checkOne">Kartica</label></div>
            </div>
            <div class="form-group row" style="height: 40;">
                @Html.ActionLink("Odustani", "Index", "Order", null, new { @class = "btn btn-primary btn-danger", style = "position: relative;background-color: #3DD713;left: 70px; color: #000000; border-top-left-radius: 5px; border-bottom-left-radius: 5px;", type = "submit" })
                @Html.ActionLink("Zakljuci narudzbu", "CreditCard", "Order", null, new { @class = "btn btn-primary btn-danger", style = "position: relative;background-color: #3DD713;left: 1100px; color: #000000; border-top-left-radius: 5px; border-bottom-left-radius: 5px;", type = "submit" })
            </div>
        </form>
    </div>
</div>

